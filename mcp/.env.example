# ConHub MCP Server - Local Development Configuration

# =============================================================================
# DATABASE
# =============================================================================
# Local PostgreSQL
DATABASE_URL=postgresql://conhub:conhub_password@localhost:5432/conhub

# OR use Neon DB (production/remote)
# DATABASE_URL_NEON=postgresql://neondb_owner:npg_w8jLMEkgsxc9@ep-wispy-credit-aazkw4fu-pooler.westus3.azure.neon.tech/neondb?sslmode=require&channel_binding=require

# =============================================================================
# MCP SERVICE
# =============================================================================
MCP_SERVICE_PORT=3016
HOST=0.0.0.0
RUST_LOG=info

# =============================================================================
# CONNECTORS - Enable/Disable
# =============================================================================
ENABLE_FS=true
ENABLE_GITHUB=true
ENABLE_GITLAB=false
ENABLE_BITBUCKET=false
ENABLE_GDRIVE=false
ENABLE_DROPBOX=false
ENABLE_NOTION=false

# =============================================================================
# LOCAL FILESYSTEM CONNECTOR
# =============================================================================
# Comma-separated list of root paths to expose via MCP
# Windows example:
FS_ROOT_PATHS=c:\Users\risha\Desktop\Work\ConHub
# Linux/Mac example:
# FS_ROOT_PATHS=/home/user/projects,/home/user/documents

# =============================================================================
# GITHUB CONNECTOR
# =============================================================================
GITHUB_API_BASE=https://api.github.com
# Get token from: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your_personal_access_token_here

# =============================================================================
# GITLAB CONNECTOR
# =============================================================================
GITLAB_BASE_URL=https://gitlab.com
# Get token from: https://gitlab.com/-/profile/personal_access_tokens
GITLAB_TOKEN=glpat-your_token_here

# =============================================================================
# BITBUCKET CONNECTOR
# =============================================================================
BITBUCKET_BASE_URL=https://api.bitbucket.org/2.0
# App password from: https://bitbucket.org/account/settings/app-passwords/
BITBUCKET_TOKEN=your_app_password

# =============================================================================
# GOOGLE DRIVE CONNECTOR
# =============================================================================
# OAuth2 credentials - create at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
# Refresh token (obtained via OAuth flow)
GOOGLE_REFRESH_TOKEN=your_refresh_token

# =============================================================================
# DROPBOX CONNECTOR
# =============================================================================
# Create app at: https://www.dropbox.com/developers/apps
DROPBOX_APP_KEY=your_app_key
DROPBOX_APP_SECRET=your_app_secret
# Access token or refresh token
DROPBOX_ACCESS_TOKEN=your_access_token

# =============================================================================
# NOTION CONNECTOR
# =============================================================================
# Create integration at: https://www.notion.so/my-integrations
NOTION_TOKEN=secret_your_integration_token

# =============================================================================
# PERFORMANCE & LIMITS
# =============================================================================
REQUEST_TIMEOUT_SECS=30
CACHE_TTL_SECS=300
RATE_LIMIT_PER_MINUTE=60
