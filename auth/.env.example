# =============================================================================
# AUTH0 CONFIGURATION
# =============================================================================
# Auth0 Domain (e.g., your-tenant.us.auth0.com)
AUTH0_DOMAIN=your-tenant.us.auth0.com

# Auth0 API Audience/Identifier (e.g., https://api.conhub.dev)
AUTH0_AUDIENCE=https://api.conhub.dev

# Optional: Auth0 Management API (for advanced features)
# AUTH0_MGMT_CLIENT_ID=your_management_client_id
# AUTH0_MGMT_CLIENT_SECRET=your_management_client_secret

# =============================================================================
# OAUTH PROVIDERS (For Connectors, not for login)
# =============================================================================
# These are used for data source connections, not for user authentication
# User authentication goes through Auth0

# Google (for Google Drive connector)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub (for GitHub connector)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Bitbucket (for Bitbucket connector)
BITBUCKET_CLIENT_ID=your-bitbucket-client-id
BITBUCKET_CLIENT_SECRET=your-bitbucket-client-secret

# GitLab (for GitLab connector)
GITLAB_CLIENT_ID=your-gitlab-client-id
GITLAB_CLIENT_SECRET=your-gitlab-client-secret

# OAuth redirect URI (for connector OAuth flows)
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# =============================================================================
# FEATURE TOGGLES
# =============================================================================
FEATURE_TOGGLES_PATH=../feature-toggles.json

# =============================================================================
# EMAIL CONFIGURATION (For password reset)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@conhub.dev
