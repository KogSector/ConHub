# Production Environment Variables
# Copy this to .env.local and update with your production values

# Backend API URL (Production)
NEXT_PUBLIC_API_URL=https://api.conhub.com

# Development environment
NODE_ENV=production

# Auth0 Configuration (Production)
AUTH0_SECRET='your-production-secret-32-chars'
AUTH0_BASE_URL='https://conhub.com'
AUTH0_ISSUER_BASE_URL='https://your-auth0-domain.auth0.com'
AUTH0_CLIENT_ID='your-production-client-id'
AUTH0_CLIENT_SECRET='your-production-client-secret'

# Public Auth0 Configuration (for client-side)
NEXT_PUBLIC_AUTH0_DOMAIN='your-auth0-domain.auth0.com'
NEXT_PUBLIC_AUTH0_CLIENT_ID='your-production-client-id'
