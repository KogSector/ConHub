# ConHub Frontend - Environment Configuration

# =============================================================================
# AUTH0 CONFIGURATION (Primary Authentication)
# =============================================================================
# Auth0 Domain (e.g., your-tenant.us.auth0.com)
NEXT_PUBLIC_AUTH0_DOMAIN=your-tenant.us.auth0.com

# Auth0 SPA Client ID
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-spa-client-id

# Auth0 API Audience (must match auth service AUTH0_AUDIENCE)
NEXT_PUBLIC_AUTH0_AUDIENCE=https://api.conhub.dev

# Auth0 Redirect URIs
NEXT_PUBLIC_AUTH0_REDIRECT_URI=http://localhost:3000/auth/callback
NEXT_PUBLIC_AUTH0_LOGOUT_REDIRECT_URI=http://localhost:3000/

# =============================================================================
# CONHUB SERVICE URLS
# =============================================================================
# Auth Service
NEXT_PUBLIC_AUTH_SERVICE_URL=http://localhost:3010

# Backend/API Service
NEXT_PUBLIC_BACKEND_BASE_URL=http://localhost:3001
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001

# Data Service
NEXT_PUBLIC_DATA_SERVICE_URL=http://localhost:3011

# Embedding Service
NEXT_PUBLIC_EMBEDDING_SERVICE_URL=http://localhost:3012

# MCP Service
NEXT_PUBLIC_MCP_SERVICE_URL=http://localhost:3016

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable authentication
NEXT_PUBLIC_AUTH_ENABLED=true

# =============================================================================
# OPTIONAL: STRIPE (for billing)
# =============================================================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key

# =============================================================================
# DEVELOPMENT
# =============================================================================
NODE_ENV=development
