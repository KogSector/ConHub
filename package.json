{
  "name": "conhub",
  "version": "1.0.0",
  "description": "ConHub - Unified development workflow platform",
  "private": true,
  "scripts": {
    "start": "node scripts/check-platform.js",
    "start:windows": "powershell -ExecutionPolicy Bypass -File scripts/start.ps1",
    "start:linux": "./scripts/start.sh",
    "stop:windows": "powershell -ExecutionPolicy Bypass -File scripts/stop.ps1",
    "stop:linux": "./scripts/stop.sh",
    "status": "powershell -ExecutionPolicy Bypass -File scripts/status.ps1",
    "status:linux": "./scripts/status.sh",
    "check:services": "node scripts/check-platform.js check",
    "dev": "npm start",
    "dev:frontend": "cd frontend && next dev -p 3000",
    "dev:backend": "cargo run --bin conhub-backend",
    "dev:lexor": "cargo run --bin lexor",
    "dev:langchain": "cd langchain-service && set PORT=3002 && nodemon --exec ts-node src/index.ts",
    "dev:haystack": "cd haystack-service && python -m uvicorn app.main:app --host 0.0.0.0 --port 8001 --reload",
    "build": "npm run build:frontend && npm run build:backend && npm run build:langchain",
    "build:frontend": "cd frontend && next build",
    "build:backend": "cargo build --release --bin conhub-backend --bin lexor",
    "build:langchain": "cd langchain-service && tsc",
    "start:frontend": "cd frontend && next start -p 3000",
    "start:langchain": "cd langchain-service && node dist/index.js",
    "lint": "cd frontend && next lint && cd ../langchain-service && eslint src/**/*.ts",
    "lint:fix": "cd frontend && next lint --fix && cd ../langchain-service && eslint src/**/*.ts --fix",
    "test": "cd langchain-service && jest",
    "test:settings": "powershell -ExecutionPolicy Bypass -File scripts/test-settings.ps1",
    "test:settings:linux": "./scripts/test-settings.sh",
    "install:all": "npm install"
  },
  "dependencies": {
