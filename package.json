{
  "name": "conhub",
  "version": "1.0.0",
  "description": "ConHub - Unified development environment orchestration",
  "scripts": {
    "start": "node scripts/services/start.js",
    "stop": "node scripts/services/stop.js",
    "status": "node scripts/services/status.js",
    "logs": "cd scripts && npm run docker:logs",
    "build": "cd scripts && npm run docker:build",
    "rebuild": "cd scripts && npm run docker:rebuild",
    "clean": "cd scripts && npm run docker:clean",
    "setup": "cd scripts && npm run docker:setup",
    "dev": "node scripts/services/start.js",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:auth": "cd auth && cargo run",
    "dev:billing": "cd billing && cargo run",
    "dev:client": "cd client && cargo run",
    "dev:data": "cd data && cargo run",
    "db:health": "cd scripts && python database_manager.py health",
    "db:users": "cd scripts && python database_manager.py list-users",
    "db:status": "cd scripts && python database_manager.py health",
    "db:reset": "dotenv -e .env.example -- node scripts/database/reset-database.js",
    "dev:security": "cd security && cargo run",
    "dev:webhook": "cd webhook && cargo run",
    "dev:embedding": "cd embedding && cargo run",
    "dev:mcp-service": "cd mcp/service && npm start",
    "test": "cd tests && python -m pytest -v",
    "validate": "node scripts/validate_microservices.js"
  },
  "workspaces": [
    "frontend",
    "scripts"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/conhub.git"
  },
  "keywords": [
    "microservices",
    "docker",
    "rust",
    "nextjs",
    "client",
    "development"
  ],
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.3",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0"
  }
}
