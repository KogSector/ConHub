{
  "name": "conhub-workspace",
  "version": "1.0.0",
  "description": "ConHub - Unified Repository Management with AI",
  "scripts": {
    "start": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && cargo run",
    "install:all": "cd frontend && npm install",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && cargo build --release",
    "build": "npm run build:backend && npm run build:frontend",
    "test:frontend": "cd frontend && npm test",
    "lint:frontend": "cd frontend && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "private": true
}
