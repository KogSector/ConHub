{
  "name": "conhub",
  "version": "1.0.0",
  "description": "ConHub - Unified development workflow platform",
  "scripts": {
    "start": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:lexor\"",
    "dev": "npm start",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && cargo run",
    "dev:lexor": "cd lexor && cargo run",
    "build": "npm run build:frontend && npm run build:backend && npm run build:lexor",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && cargo build --release",
    "build:lexor": "cd lexor && cargo build --release",
    "install:all": "cd frontend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "frontend"
  ]
}