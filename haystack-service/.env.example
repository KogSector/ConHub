# Environment Configuration
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8001

# Document Store Configuration (choose one)
# Elasticsearch (recommended for production)
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX=conhub-documents

# Alternative: In-memory store (for development)
USE_IN_MEMORY_STORE=true

# Embedding Model Configuration
# Local embedding model (free, runs locally)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Alternative: OpenAI embeddings (requires API key)
# OPENAI_API_KEY=sk-your-openai-api-key-here
# USE_OPENAI_EMBEDDINGS=false

# Reader Model Configuration (for Q&A)
READER_MODEL=deepset/roberta-base-squad2

# File Processing
MAX_FILE_SIZE_MB=50
SUPPORTED_EXTENSIONS=.txt,.pdf,.docx,.md,.html

# Logging
LOG_LEVEL=INFO

# External Services
LANGCHAIN_SERVICE_URL=http://localhost:3001
RUST_BACKEND_URL=http://localhost:8000

# Security
API_KEY_HEADER=X-API-Key
# API_KEY=your-api-key-here

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
